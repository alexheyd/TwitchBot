<div class="row connection-status">
  <div class="col-xs-12">
    <h4>Connection Status</h4>

    <div class="row">
      {{#each-in clients as |clientName client|}}
        <div class="col-xs-{{clientColWidth}} client-connection-status">
          <h4>
            <i class="fa {{client.iconClass}}" />
            {{clientName}}
          </h4>

          <span>Status: {{client.status}}</span>

          <div class="client-actions">
            {{#if client.connected}}
              <button class="btn btn-danger" {{action "disconnect" client}}><i class="fa fa-times"></i>Disconnect</button>
            {{else}}
              <button class="btn btn-primary" {{action "connect" client}}><i class="fa fa-exchange"></i>Connect</button>
            {{/if}}
          </div>
        </div>
      {{/each-in}}
    </div>

  </div>
</div>
