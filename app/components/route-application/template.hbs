{{!-- TODO: add connection status to loading screen --}}
<div id="loading">
  <div class="list-group">
    <span class="list-group-item" href="#"><i class="fa {{twitchConnectedClass}} fa-fw"></i>&nbsp; {{twitchConnectionStatus}}</span>
    <span class="list-group-item" href="#"><i class="fa {{channelJoinedClass}} fa-fw"></i>&nbsp; {{channelJoinedStatus}}</span>
    <span class="list-group-item" href="#"><i class="fa {{emojisFetchedClass}} fa-fw"></i>&nbsp; {{emojiFetchStatus}}</span>
  </div>
</div>

<nav class="row">
  <ul>
    {{link-to "Settings" "settings" tagName="li"}}
    {{link-to "Dashboard" "dashboard" tagName="li"}}
    {{link-to "Starred" "starred" tagName="li"}}
    {{link-to "Giveaways" "giveaways" tagName="li"}}
    {{link-to "Lists" "lists" tagName="li"}}
    {{link-to "Loyalty" "loyalty" tagName="li"}}
  </ul>
</nav>

{{notification-tray notification=notification}}

<div class="row">
  <div id="chat" class="col-xs-6">
    <div class="row">
      <div class="col-xs-12">
        {{twitch-chat title="Chat" messages=chatroom enableChatInput="true" enableChatterList="true"}}
      </div>
    </div>

    <div class="row">
      <div id="chat-mentions" class="col-xs-12">
        {{twitch-chat title="Mentions" messages=mentions}}
      </div>
    </div>
  </div>

  <div id="main-app" class="col-xs-6">
    {{outlet}}
  </div>
</div>

{{whispers-tray}}

{{outlet "modal"}}
