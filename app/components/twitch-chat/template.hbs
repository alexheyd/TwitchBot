<div class="col-xs-12">
  <div class="row">
    <div class="col-xs-8">
      <h3>{{title}}</h3>

      <div class="chatbox">
        {{#if unreadMessages}}
          <button class="btn btn-info btn-unread" {{action "jumpToLastRead"}}>Jump to Last Read</button>
        {{/if}}

        {{#each messages as |message|}}
          {{twitch-chat-message message=message markAsLast="markAsLast"}}
        {{/each}}
      </div>

      {{#if enableChatInput}}
        <div class="msg-input">
          {{input type="text" value=chatInput enter="say" placeholder="Say something..."}}
        </div>

        {{emoji-selector}}
      {{/if}}
    </div>

    {{#if enableViewerList}}
      <div class="col-xs-4">
        {{viewer-list}}
      </div>
    {{/if}}
  </div>
</div>
